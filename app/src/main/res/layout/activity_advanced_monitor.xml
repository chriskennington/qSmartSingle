                    android:layout_height="match_parent"
                    android:background="@drawable/bg_1s_0s"
                    android:layout_span="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Name"
                        android:id="@+id/advanced_device_name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:textSize="30sp"
                        android:textColor="@color/White"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/advanced_status_icon"
                        android:src="@drawable/status_icon_gray"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Address"
                        android:id="@+id/advanced_device_address"
                        android:layout_below="@+id/advanced_status_icon"
                        android:layout_alignStart="@+id/advanced_device_name"
                        android:layout_marginStart="15dp"/>

                </RelativeLayout>
            </TableRow>

